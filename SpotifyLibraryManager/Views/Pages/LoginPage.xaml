<Page x:Class="SpotifyLibraryManager.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SpotifyLibraryManager"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid Margin="10" x:Name="WelcomeScreen">
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <TextBlock Text="Welcome!" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontSize="48"/>
            <TextBlock Text="Please login to load you library" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontSize="20" Margin="0,20,0,0"/>
            <Button Style="{StaticResource ToolBarButtonStyle}" x:Name="LoginBtn" Content="Login" HorizontalAlignment="Center" VerticalAlignment="Center" 
                    Margin="0,40,0,0" VerticalContentAlignment="Center" Width="100" Height="40" Foreground="White" BorderBrush="#383838"
                    Background="#383838" FontSize="24" FontWeight="Medium" Click="LoginBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
