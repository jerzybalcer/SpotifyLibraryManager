<Application x:Class="SpotifyLibraryManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SpotifyLibraryManager"
             StartupUri="/Views/MainWindow.xaml"
             Startup="Application_Startup">
    <Application.Resources>
        <!--External Style Files-->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ResourceDictionaries/CustomMenu.xaml"/>
                <ResourceDictionary Source="/ResourceDictionaries/CustomScrollBar.xaml"/>
                <ResourceDictionary Source="/ResourceDictionaries/CustomScrollViewer.xaml"/>
                <ResourceDictionary Source="/ResourceDictionaries/CustomTextBox.xaml"/>
                <ResourceDictionary Source="/ResourceDictionaries/ToolBarButtonStyle.xaml"/>
                <ResourceDictionary Source="/ResourceDictionaries/AlbumCoverButtonStyle.xaml"/>
                <ResourceDictionary Source="/ResourceDictionaries/GreenRoundButtonStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
